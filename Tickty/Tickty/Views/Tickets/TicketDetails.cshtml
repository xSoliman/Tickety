@model TicketDetails

<!DOCTYPE html>
<html>
<head>
    <title>Ticket Details</title>
    <style>


        #ticket-details-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: -25px;
            color: #333;
        }

        h5 {
            text-align: center;
            font-size: 20px;
            margin-bottom: 15px;
            color: #555;
        }

        .ticket-section {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #ddd;
        }

        .ticket-info {
            margin-bottom: 10px;
            font-size: 16px;
            color: #333;
        }

        .ticket-info span {
            font-weight: bold;
        }

        .qr-code {
            max-width: 150px;
            height: auto;
            margin: 0 auto;
            display: block;
        }

        #back-button {
            display: block;
            font-size: 16px;
            font-weight: 500;
            text-decoration: none;
            color: #333;
            text-align: center;
            margin-top: 20px;
        }

        #back-button:hover {
            color: #86B817;
        }
    </style>
</head>
<body>
    <h2>Ticket Details</h2>

    <div id="ticket-details-container">
        <img src="@Model.QrCode" alt="QR Code" class="qr-code" />
        <!-- Match Section -->
        <div class="ticket-section">
            <h5>Match</h5>
            <div class="ticket-info">
                @Model.Team1 vs @Model.Team2
            </div>

            <div class="ticket-info">
                @Model.MatchDescription
            </div>
            <div class="ticket-info">
                <span>Referee:</span> @Model.Referee
            </div>
            <div class="ticket-info">
                <span>Date:</span> @Model.Date.ToShortDateString()
            </div>
            <div class="ticket-info">
                <span>Start Time:</span> @DateTime.Today.Add(Model.StartTime).ToString("h:mm tt")
            </div>
        </div>

        <!-- Stadium Section -->
        <div class="ticket-section">
            <h5>Stadium</h5>
            <div class="ticket-info">
                <span>Stadium:</span> @Model.StadiumName
            </div>
            <div class="ticket-info">
                <span>Stadium Location:</span> @Model.StadiumLocation
            </div>
        </div>

        <div class="ticket-section">
            <h5>Ticket</h5>
            <div class="ticket-info">
                <span>Ticket Type:</span> @Model.TicketType
            </div>
            <div class="ticket-info">
                @Model.TicketDescription
            </div>
        </div>

        <a id="back-button" asp-controller="Tickets" asp-action="UserTickets"><i class="bi bi-arrow-bar-left"></i> Back to my tickets</a>
    </div>
</body>
</html>
