@model IEnumerable<Tickty.Models.User>

<title>Admins</title>
<style>
    .create-new {
        display: inline-block;
        padding: 10px 20px;
        background-color: #86B817;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
    }

        .create-new:hover {
            background-color: #74a514;
            color: #fff;
        }


    .table-container {
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .table {
        width: 80%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th,
        .table td {
            color: dimgray;
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        .table th {
            background-color: #333;
            color: whitesmoke;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    .action-buttons {
        display: flex;
        gap: 5px;
        justify-content: center;
    }

    .edit-link {
        display: inline-block;
        padding: 5px 10px;
        background-color: #007bff;
        color: white;
        border-radius: 5px;
        text-decoration: none;
    }

        .edit-link:hover {
            background-color: #0056b3;
            color: white;
        }

    .btn-danger {
        padding: 5px 10px;
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .bi-pencil, .bi-trash {
        vertical-align: middle;
    }
</style>
<h1 style="text-align:center;">Admins</h1>
@if (ViewBag.Deny != null)
{
    <div class="alert alert-danger text-center">@ViewBag.Deny</div>
}
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Phone)</th>
                <th>@Html.DisplayNameFor(model => model.Role)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Role)</td>
                    <td>
                        <div class="action-buttons">
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this admin?');" style="margin: 0;">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="create-container" style="text-align:center">
    <a asp-action="Create" class="create-new">Add Admin</a>
</div>
