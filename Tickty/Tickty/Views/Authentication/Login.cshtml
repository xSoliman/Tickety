@model User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login - Tickity</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-image: url('/img/p-min.jpg');
            background-size: cover;
            background-position: center;
            margin: auto;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        form {
            background-color: rgba(250, 250, 250, 0.85);
            border-radius: 8px;
            padding: 20px;
            padding-bottom: 30px;
            margin-right: -50px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

        label {
            display: block;
            margin-bottom: 8px;
            color: dimgray;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        button {
            background-color: #86B817;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background-color: #6b9312;
            }

        span {
            color: #e74c3c;
            position: relative;
            top: -12px
        }

        .alert-danger {
            color: #d10024;
            margin-bottom: 16px;
        }

        .guest-button-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .guest-button {
            color: #000;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            position: relative;
            right: 275px;
            top: 65px;
        }

            .guest-button:hover {
                color: blue;
            }

        #lg {
            position: relative;
            left: 160px;
        }
    </style>
</head>
<body>
    <form method="post" asp-controller="Authentication" asp-action="Login">
        <h2 style="text-align: center;">Sign in</h2>

        @if (TempData["Wrong"] != null)
        {
            <div class="alert-danger">@TempData["Wrong"]</div>
        }

        <label asp-for="Email">Email</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>

        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>

        <div class="guest-button-container">
            <button type="submit" id="lg">Login</button>

            <a asp-controller="Home" asp-action="Index" class="guest-button">
                Continue as a guest
                <i style="font-size:20px;" class="bi bi-person-fill"></i>
            </a>
        </div>

        <p>Don't have an account? <a asp-controller="Authentication" asp-action="Register">Sign Up!</a></p>
    </form>

</body>
</html>
