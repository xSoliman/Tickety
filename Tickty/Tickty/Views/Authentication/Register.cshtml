@model User
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Tickty</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            /* background-color: #f4f4f4; */
            background-image: url('/img/p-min.jpg');
            background-size: cover; 
            background-position:center; 
            display: flex;
            align-items: center;
            justify-content: center;
        }

        form {
            background-color: rgba(250, 250, 250, 0.85); 
            border-radius: 8px;

            padding: 5px;
            padding-left: 20px;
            padding-right: 20px;
            padding-bottom: 30px;
            margin-right: -50px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            height:560px;
            width: 100%;
        }


        label {
            display: block; 
            margin-bottom: 8px;
            color: dimgray;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
        }

        button {
            background-color: #86B817;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

            button:hover {
                background-color: #6b9312;
            }

        .guest-button-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            
        }

        .guest-button {
            color: #000;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            position: relative; 
            right: 275px;
            top: 65px;
        }

            .guest-button:hover {
                color: blue;
            }

        span {
            color: #e74c3c;
            position: relative;
            top: -12px
        }

        #lg {
            position: relative;
            left: 160px;
        }

    </style>
</head>
<body>
    <form asp-controller="Authentication" asp-action="Register" method="post">

        <h2 style="text-align:center;">
            Create new account on <span style="color:#86B817; position: relative;
            top: 0px;font-size:25px;">Tickty!</span>
        </h2>

        <label for="Name">Full Name</label>
        <input asp-for="Name" id="Name">
        <span asp-validation-for="Name"></span>

        <label for="Email">Email</label>
        <input type="email" asp-for="Email" id="Email">
        <span asp-validation-for="Email"></span>

        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password">
        <span asp-validation-for="Password"></span>

        <label for="ConfirmPassword">Confirm Password</label>
        <input type="password" name="ConfirmPassword"/>
        @if (ViewBag.Mismatch!=null)
        {
            <span>Password and confirm password doesn't match</span>
        }

        <label asp-for="Phone">Phone Number</label>
        <input asp-for="Phone" />
        <span asp-validation-for="Phone"></span>

        <div class="guest-button-container">
            <button type="submit" id="lg">Register</button>

            <a asp-action="Index" asp-controller="Home" class="guest-button">
                Continue as a guest
                <i style="font-size:20px;" class="bi bi-person-fill"></i>
            </a>
        </div>

        <p>Already have an account? <a asp-controller="Authentication" asp-action="Login">Sign In!</a></p>
    </form>
</body>
</html>
