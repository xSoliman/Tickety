@model IEnumerable<Tickty.Models.Stadium>

<title>Stadiums</title>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stadiums</title>
    <style>
        h1 {
            text-align: center;
        }

        .create-new {
            display: inline-block;
            padding: 10px 20px;
            background-color: #86B817;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }

            .create-new:hover {
                background-color: #74a514;
                color: #fff;
            }

        img {
            display: block;
            margin: 0 auto;
        }

        .table-container {
            width: 100%;
            display: flex;
            justify-content: center;
        }

        .table {
            width: 80%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .table th,
            .table td {
                color: dimgray;
                border: 1px solid #ddd;
                padding: 8px;
                text-align: center;
            }

            .table th {
                background-color: #333;
                color: whitesmoke;
            }

            .table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

        .location {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
        }

            .location img {
                width: 20px;
                height: 20px;
            }

        .action-buttons {
            display: flex;
            gap: 5px;
            justify-content: center;
        }

        .edit-link {
            display: inline-block;
            padding: 5px 10px;
            background-color: #007bff;
            color: white;
            border-radius: 5px;
            text-decoration: none;
        }

            .edit-link:hover {
                background-color: #0056b3;
                color: white;
            }

        .btn-danger {
            padding: 5px 10px;
            background-color: #dc3545;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .bi-pencil, .bi-trash {
            vertical-align: middle;
        }
    </style>
</head>
<body>

    <h1>Stadiums</h1>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Stadium Image</th>
                    <th>ID</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Location)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/img/@item.Image" width="100" height="100"></td>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <div class="location">
                                @Html.DisplayFor(modelItem => item.Location)
                                <a href="@item.GmapLocation" target=_blank><img src="~/img/map.png" alt="Location"></a>
                            </div>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="edit-link"><i class="bi bi-pencil"></i></a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this stadium?');" style="margin: 0;">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <p style="text-align: center;">
        <a asp-action="Create" class="create-new">Create New</a>
    </p>

</body>
</html>
