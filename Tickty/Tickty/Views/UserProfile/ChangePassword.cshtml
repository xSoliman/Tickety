@model User

<!DOCTYPE html>
<html lang="en">
<head>

    <title>Change Password</title>

    <style>


        .container-change-password {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            margin-bottom: -10px;
        }

        h2 {
            margin-top:-40px;
            color: #1e1f29;
        }

        .alert {
            text-align: center;
            margin-right: 50px;
            margin-left: 50px;
        }

        .change-password-card {
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            background-color: #fff;
            color: #1e1f29;
            border: none;
            border-radius: 10px;
            margin-bottom: 20px;
            position: relative;
            padding: 10px;
            padding-top: 30px;
        }

        .form-group {
            text-align: left; /* Center-align the content within the form-group */
        }

            .form-group label {
                margin-left:112px;
                font-size:1.1rem;
                color: dimgray;
            }

        .form-control {
            width: 50%;
            margin: 0 auto; /* Center-align the form control */
            background-color: #fff;
            color: #1e1f29;
            border-color: #1e1f29;
            border-radius: 5px;
            margin-bottom: 30px;
        }


        .confirmation-checkbox {
            margin-top: 10px; 
        }

            .confirmation-checkbox label {
                color: #1e1f29;
            }

        .error-message {
            color: #d10024;
            font-weight: bold;
            margin-top: 10px;
        }


        .my-profile-link {
            color: #86B817;
            font-weight: 500;
            position: relative;
            top: 5px;
            color: black;
            text-decoration: none;
            transition: color 0.3s;
        }

            .my-profile-link:hover {
                color: #86B817;
            }
            .back-button:hover {
                color: #fff;
                background-color: #1e1f29;
            }
    </style>

</head>
<body>

    <div class="container-change-password">
        <h2 class="text-center mb-4">Change Password</h2>

     
        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.SuccessMessage
            </div>
        }


        <div class="card change-password-card">

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <p style="text-align:center;" class="error-message">@ViewBag.ErrorMessage</p>
            }
            <!-- Change Password Form -->
            <form asp-controller="UserProfile" asp-action="ChangePassword" method="post">

                <div class="form-group">
                    <label for="currentPassword">Current Password</label>
                    <input type="password" id="currentPassword" name="currentPassword" class="form-control"/>
                </div>

                <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <input type="password" id="newPassword" name="newPassword" class="form-control"  />
                 </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" />
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <br>
                    <a asp-controller="UserProfile" asp-action="Index" class="my-profile-link">Back to my profile</a>

                </div>
            </form>

            <div class="error-message" id="errorMessage"></div>
        </div>
    </div>


</body>
</html>