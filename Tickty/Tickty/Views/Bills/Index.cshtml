@model IEnumerable<Tickty.Models.Bill>

@{
    ViewData["Title"] = "Index";
}
<title>Bills</title>


<style>


    .table-container {
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .table {
        width: 80%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th,
        .table td {
            color: dimgray;
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

        .table th {
            background-color: #333;
            color: whitesmoke;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

    .action-buttons {
        display: flex;
        gap: 5px;
        justify-content: center;
    }

    .edit-link {
        display: inline-block;
        padding: 5px 10px;
        background-color: #007bff;
        color: white;
        border-radius: 5px;
        text-decoration: none;
    }

        .edit-link:hover {
            background-color: #0056b3;
            color: white;
        }

    .btn-danger {
        padding: 5px 10px;
        background-color: #dc3545;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-outline-warning, .bi-trash {
        vertical-align: middle;
    }

</style>

<h1 style="text-align:center;">Bills</h1>
<div class="table-container">
    <table class="table">
        <thead class="table-header-dark">
            <tr>
                <th>ID</th>
                <th>User</th>
                <th>Ticket</th>
                <th>Match</th>
                <th>Stadium</th>
                <th>Bill Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@item.User.Email (ID:@item.UserId)</td>
                    <td>@item.Ticket.Type (ID:@item.TicketId)</td>
                    <td>@item.Ticket.Match.Team1 vs @item.Ticket.Match.Team2 (ID:@item.Ticket.MatchId)</td>
                    <td>@item.Ticket.Match.Stadium.Name (ID:@item.Ticket.Match.StadiumId)</td>
                    <td>@item.Date</td>
                    <td>
                        <div class="action-buttons">
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this stadium?');">
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-warning">Details</a>

                        
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

